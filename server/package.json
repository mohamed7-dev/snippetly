{
  "name": "snippetly-server",
  "version": "1.0.0",
  "description": "the server side api of the snippetly application.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "node ./scripts/build.mjs",
    "start": "NODE_ENV=production node --env-file=.env ./dist/index.js",
    "dev": "NODE_ENV=development tsx watch --tsconfig ./tsconfig.json --env-file=.env src/index.ts",
    "db:generate": "npx drizzle-kit generate --config=./src/config/drizzle.config.ts",
    "db:push": "npx drizzle-kit push --config=./src/config/drizzle.config.ts",
    "db:studio": "npx drizzle-kit studio --config=./src/config/drizzle.config.ts",
    "db:drop": "npx drizzle-kit drop --config=./src/config/drizzle.config.ts",
    "db:seed": "node --env-file=.env ./dist/seed.js"
  },
  "keywords": [],
  "author": "mohamed shaban",
  "license": "ISC",
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^5.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "picocolors": "^1.1.1",
    "uploadthing": "^7.7.4",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^7.0.1",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.23.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
